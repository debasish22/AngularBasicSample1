    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceRoot}/node_modules/lite-server/bin/lite-server",
            "outFiles": [
                "${workspaceRoot}/app/*.js"
            ]
        },
        {
             //This Task Opens the Html file in Google Chrome
                      
             "windows": {
                 "command": "C:\\Program Files (x86)\\Google\\Chrome\\Application\\chrome.exe"
             },
             "args": ["${file}"]
        }
    ]
}
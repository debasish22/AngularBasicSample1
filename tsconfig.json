{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom" ],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true,
    "outDir": "dist" //this will output all the js and js.map files to this directory,
                     //Similarly changes are also done to System.config.js
  },
  "exclulde":[
    "node_modules",
    "typings",
    "dist"]
  
}
